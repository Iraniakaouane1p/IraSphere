<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="15dp"
                android:padding="10dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_ch_item"
                    android:src="@drawable/baseline_person_24"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="20dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:contentDescription="User photo" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Send Message"
                    android:id="@+id/send_messagech_item_btn"

                    android:textColor="@color/red"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name_ch_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Nom de l'utilisateur"
                    android:paddingStart="5dp"
                    android:hint="Name"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ch_itemprof_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Actual content for accessibility"
                    android:paddingStart="5dp"
                    android:hint="Question"
                    android:textColor="@color/black"
                    android:textSize="15sp" />





        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>